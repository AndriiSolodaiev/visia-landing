      {num:4, name: "Микола Кузьменко", position: "Смм-спеціаліст" },
      {num:5, name: "Олександр Пустоцвіт", position: "СЕО" },
      {num:6, name: "Юлія Ковальчук", position: "Копірайтер" },
      {num:7, name: "Анна Михайлова", position: "Менеджер" },
